<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhy.pullToRefreshLayout" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"
        >
        <activity
            android:name="com.zhy.pullToRefreshLayout.MainActivity"
            android:theme="@style/AppBaseTheme"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhy.pullToRefreshLayout.TestActivity"
            android:theme="@style/AppOtherTheme"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.zhy.pullToRefreshLayout.PullActivity"
            android:theme="@style/AppOtherTheme"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
